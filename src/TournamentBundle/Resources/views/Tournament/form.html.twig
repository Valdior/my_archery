{# src/TournamentBundle/Resources/views/Tournament/form.html.twig #}

<h3>Formulaire des compétitions</h3>

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.dateStart, "Date de début", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.dateStart) }}
        <div class="col-sm-10">
            {{ form_widget(form.dateStart) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.dateEnd, "Date de fin", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.dateEnd) }}
        <div class="col-sm-10">
            {{ form_widget(form.dateEnd) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.type, "Type", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.type) }}
        <div class="col-sm-10">
            {{ form_widget(form.type) }}
        </div>
    </div>
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>