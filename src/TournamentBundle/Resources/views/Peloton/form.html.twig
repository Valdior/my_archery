{# src/TournamentBundle/Resources/views/Peloton/form.html.twig #}

<h3>Formulaire du peloton</h3>

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.maxParticipant, "Maximum de participant", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.maxParticipant) }}
        <div class="col-sm-10">
            {{ form_widget(form.maxParticipant) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.startTime, "Horaire", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.startTime) }}
        <div class="col-sm-10">
            {{ form_widget(form.startTime) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.type, "Type", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.type) }}
        <div class="col-sm-10">
            {{ form_widget(form.type) }}
        </div>
    </div>
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>