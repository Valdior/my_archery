{# src/TournamentBundle/Resources/views/Peloton/form.html.twig #}

<h3>Formulaire du particpant</h3>

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    {% if form.participant is defined %}
    <div class="form-group">
        {{ form_label(form.participant, "Participant", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.participant) }}
        <div class="col-sm-10">
            {{ form_widget(form.participant) }}
        </div>
    </div>
    {% endif %}

    {% if form.ten is defined %}
    <div class="form-group">
        {{ form_label(form.point, "Total des points", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.point) }}
        <div class="col-sm-10">
            {{ form_widget(form.point) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.x, "Nombre de X", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.x) }}
        <div class="col-sm-10">
            {{ form_widget(form.x) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.ten, "Nombre de 10", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.ten) }}
        <div class="col-sm-10">
            {{ form_widget(form.ten) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.nine, "Nombre de 9", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.nine) }}
        <div class="col-sm-10">
            {{ form_widget(form.nine) }}
        </div>
    </div>

    {{ form_row(form.isForfait) }}
    {% endif %}

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>