{# src/TournamentBundle/Resources/views/Peloton/form.html.twig #}

<h3>Formulaire du particpant</h3>

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.participant, "Participant", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.participant) }}
        <div class="col-sm-10">
            {{ form_widget(form.participant) }}
        </div>
    </div>

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>